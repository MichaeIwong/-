<% include layout/header %>

<div class="main">
  <% include layout/nav %>
  <div class="container-fluid">
    <div class="page-title">
      <h1>分类目录</h1>
    </div>
    <!-- 有错误信息时展示 -->
    <!-- <div class="alert alert-danger">
        <strong>错误！</strong>发生XXX错误
      </div> -->
    <div class="row">
      <div class="col-md-4">
        <form id="form">
          <h2>添加新分类目录</h2>
          <div class="form-group">
            <label for="name">名称</label>
            <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
          </div>
          <div class="form-group">
            <label for="slug">别名</label>
            <input id="slug" class="form-control" name="slug" type="text" placeholder="slug">
            <p class="help-block">https://zce.me/category/<strong>slug</strong></p>
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">添加</button>
          </div>
        </form>
      </div>
      <div class="col-md-8">
        <div class="page-action">
          <!-- show when multiple checked -->
          <a class="btn btn-danger btn-sm" href="javascript:;" style="display: none" id="delAll">批量删除</a>
        </div>
        <form id="tableForm">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="text-center" width="40"><input type="checkbox" id="checkedAll"></th>
                <th>名称</th>
                <th>Slug</th>
                <th class="text-center" width="100">操作</th>
              </tr>
            </thead>
            <tbody id="tbody">
              <tr>
                <td colspan="4" style="text-align: center">数据正在加载...</td>
              </tr>

            </tbody>
          </table>
        </form>
      </div>
    </div>
  </div>
</div>

<% include layout/aside %>
<% include layout/footer %>
<!-- 浏览器渲染模板 -->
<script id="tmp" type="text/html">
  {{each data}}
  <tr>
      <td class="text-center"><input type="checkbox" class='boxitem' name="id" value={{$value.id}}></td>
      <td>{{$value.name}}</td>
      <td>{{$value.slug}}</td>
      <td class="text-center">
        <a href="javascript:;" class="btn btn-info btn-xs" id={{$value.id}} >编辑</a>
        <a href="javascript:;" class="btn btn-danger btn-xs" id={{$value.id}}>删除</a>
      </td>
    </tr>
  {{/each}}
</script>
<!-- 编辑渲染模板 -->
<script id="edit" type="text/html">
  <input type="hidden" name='id' value="{{ id }}">
  <h2>编辑分类目录</h2>
  <div class="form-group">
    <label for="name">名称</label>
    <input id="name" class="form-control" name="name" type="text" placeholder="分类名称" value="{{ name }}">
  </div>
  <div class="form-group">
    <label for="slug">别名</label>
    <input id="slug" class="form-control" name="slug" type="text" placeholder="slug" value="{{ slug }}">
    <p class="help-block">https://zce.me/category/<strong>slug</strong></p>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" id="updata">修改</button>
  </div>
</script>

<!-- 新增分类模板 -->
<script id="sort" type="text/html">
  <h2>添加新分类目录</h2>
   <div class="form-group">
     <label for="name">名称</label>
     <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
   </div>
   <div class="form-group">
     <label for="slug">别名</label>
     <input id="slug" class="form-control" name="slug" type="text" placeholder="slug">
     <p class="help-block">https://zce.me/category/<strong>slug</strong></p>
   </div>
   <div class="form-group">
     <button class="btn btn-primary" type="submit" >添加</button>
   </div>
</script>
<script>
  //封装浏览器动态渲染数据函数
  function loadData() {
    $.ajax({
      method: 'GET',
      url: '/getAllData',
      success: res => {
        let { status, data, msg } = res
        if (status === 200) {
          // alert(msg)
          let html = template('tmp', res)
          $('#tbody').html(html)
        } else {
          alert(msg)
        }
      }
    })
  }
  //调用动态渲染数据
  loadData()

  //给提交目录添加一个点击事件
  $('#form').on('click', 'button[type=submit]', function (e) {
    e.preventDefault()
    let params = $('#form').serialize()
    $.ajax({
      method: 'POST',
      url: '/addSort',
      data: params,
      success: res => {
        // console.log(res);
        let { status, msg } = res
        if (status === 200) {
          alert(msg)
          //重新渲染数据
          loadData()
        } else {
          alert(msg)
        }

      }
    })
    $('input').val('')
  })

  //给编辑按钮一个点击事件
  $('#tbody').on('click', '.btn-info', function () {
    let id = $(this).attr('id')
    $.ajax({
      method: 'GET',
      url: '/selSortById',
      data: 'id=' + id,
      success: res => {
        // console.log(res);
        let { status, msg, data } = res
        if (status === 200) {
          let html = template('edit', data)
          $('#form').html(html)
        }
      }
    })

  })

  //给提交数据绑定一个点击事件
  $('#form').on('click', '#updata', function (e) {
    e.preventDefault()
    let params = $('#form').serialize()
    // console.log(params);
    //把数据交给后台
    $.ajax({
      method: 'POST',
      url: '/updateCategories',
      data: params,
      success: res => {
        let { status, msg } = res
        if (status === 200) {
          alert(msg)
          //重新渲染数据
          loadData()
          let html = template('sort', {})
          $('#form').html(html)
        } else {
          alert(msg)
        }

      }
    })


  })

  //给删除按钮绑定一个点击事件
  $('#tbody').on('click', '.btn-danger', function () {
    if (confirm('确定删除?')) {
      let id = $(this).attr('id')
      // console.log(id);
      $.ajax({
        method: 'GET',
        url: '/delSort',
        data: 'id=' + id,
        success: res => {
          let { status, msg } = res
          if (status === 200) {
            alert(msg)
            //重新渲染数据
            loadData()

          } else {
            alert(msg)
          }

        }
      })
    }


  })

  //给全选框绑定一个点击事件
  $('#checkedAll').click(function () {
    let result = $('#checkedAll').prop('checked')
    //判断全选框是否选中,下方选项状态一致
    result ? $('.boxitem').prop('checked', true) : $('.boxitem').prop('checked', false)
    //批量删除显示
    result ? $('#delAll').slideDown() : $('#delAll').slideUp()
  })

  //给下方选项绑定点击事件
  $('#tbody').on('click', '.boxitem', function () {
    //选项总数量
    let totalCount = $('.boxitem').length
    //检测点击选项的数量
    let setCount = 0
    $('.boxitem').each((index, ele) => {
      if ($(ele).prop('checked')) {
        setCount++
      }
    })
    // console.log(setCount);
    setCount >= 2 ? $('#delAll').slideDown() : $('#delAll').slideUp()
    setCount == totalCount? $('#checkedAll').prop('checked',true):$('#checkedAll').prop('checked',false)
  })

  //给批量删除绑定点击事件
  $('#delAll').click(function () {
    if (confirm('确定删除?')) {
      let params = $('#tableForm').serialize()
      $.ajax({
        method: 'POST',
        url: '/delAllSort',
        data: params,
        success: res => {
          let { status, msg } = res
          if (status === 200) {
            alert(msg)
            //重新渲染
            loadData()
          } else {
            alert(msg)
          }

        }
      })
    }

  })
</script>